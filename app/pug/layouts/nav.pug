include ../bem/index
include ../helpers/config
include ../helpers/data
include ../helpers/mixins
+b.fixed._md-top
	+b.nav._style
		+e.container.container
			+e.row.row.flex_y-center
				+e.logo.col-8.col-md-3
					+b.hamburger._effect-1(type="button" id="js-vnav__btn")
						+e.SPAN.lines
							span Line1
							span Line2
							span Line3
						//+e.SPAN.text Menu
					+e.logo-content
						+e.logo-content-img(src="img/logo.png" alt="")
				+e.NAV.menu.col-12.col-md-6#navigation
					for item in navigation
						+e.LI.menu-item
							a(href=item.link)=item.name
					+e.LI.menu-item
						+b.BUTTON.btn._navigation(data-action="vmodal" data-open="#form") Button
				+e.addition.col-4.col-md-3#js-vnav-addition
					+e.addition-toggle#js-vnav-toggle
						span
						span
						span
					+e.addition-links.js-vnav-links
						+e.A.addition-link +99 999 999 99
						+e.A.addition-link._hidden +99 999 999 99